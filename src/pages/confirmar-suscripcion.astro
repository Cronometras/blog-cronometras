import Base from "@/layouts/Base.astro";

// En modo estático, necesitamos definir getStaticPaths
export function getStaticPaths() {
  return [
    {
      params: { },
      props: { 
        isRedirect: true 
      }
    }
  ];
}

const { isRedirect } = Astro.props;

// Para versión estática, suponemos que el usuario será redirigido
// a la página de confirmación con los parámetros en la URL
let token = null;
let email = null;

// Asumimos que no hay parámetros disponibles en este momento de construcción
const isValid = false;

<Base title={isValid ? "Suscripción Confirmada | Cronometras App" : "Error de Confirmación | Cronometras App"}>
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="md:col-10 lg:col-6">
          <div class="bg-white p-8 rounded-xl shadow-lg text-center">
            {
              isValid ? (
                <>
                  <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-green-100 text-green-600 mx-auto mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <h1 class="text-2xl font-bold mb-4">¡Suscripción Confirmada!</h1>
                  <p class="text-gray-700 mb-6">
                    Gracias por confirmar tu suscripción a nuestro newsletter. A partir de ahora, 
                    recibirás nuestras actualizaciones, consejos y novedades directamente en tu bandeja de entrada.
                  </p>
                  <p class="text-gray-600 mb-8">
                    Hemos confirmado la suscripción para: <strong id="email-placeholder"></strong>
                  </p>
                  <div>
                    <a href="/" class="inline-block py-2 px-6 bg-accent text-white font-medium rounded-lg hover:bg-accent-dark transition-colors">
                      Volver a la página principal
                    </a>
                  </div>
                </>
              ) : (
                <>
                  <div class="inline-flex h-20 w-20 items-center justify-center rounded-full bg-red-100 text-red-600 mx-auto mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <h1 class="text-2xl font-bold mb-4">Error de Confirmación</h1>
                  <p class="text-gray-700 mb-6">
                    Lo sentimos, pero no pudimos confirmar tu suscripción. El enlace que has 
                    utilizado podría haber expirado o no ser válido.
                  </p>
                  <div class="space-y-4">
                    <a href="/es/newsletter" class="inline-block py-2 px-6 bg-accent text-white font-medium rounded-lg hover:bg-accent-dark transition-colors">
                      Intentar suscribirse de nuevo
                    </a>
                    <div>
                      <a href="/" class="inline-block text-accent hover:underline mt-4">
                        Volver a la página principal
                      </a>
                    </div>
                  </div>
                </>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </section>
</Base>

<script>
  // Esta función procesa los parámetros al cargar la página
  function processUrlParams() {
    const params = new URLSearchParams(window.location.search);
    const token = params.get('token');
    const email = params.get('email');
    
    const isValid = token && email;
    
    // Actualizar la UI basada en los parámetros
    if (isValid) {
      // Mostrar la pantalla de confirmación exitosa
      document.querySelector('#email-placeholder').textContent = email;
      
      // Cambiar containers de visibilidad
      document.querySelectorAll('[data-confirmation="error"]').forEach(el => el.style.display = 'none');
      document.querySelectorAll('[data-confirmation="success"]').forEach(el => el.style.display = 'block');
      
      // Enviar evento a Analytics si está disponible
      if (typeof window.gtag === 'function') {
        window.gtag('event', 'subscription_confirmed', {
          event_category: 'newsletter',
          event_label: email
        });
      }
    } else {
      // Mostrar la pantalla de error
      document.querySelectorAll('[data-confirmation="success"]').forEach(el => el.style.display = 'none');
      document.querySelectorAll('[data-confirmation="error"]').forEach(el => el.style.display = 'block');
      
      // Enviar evento a Analytics si está disponible
      if (typeof window.gtag === 'function') {
        window.gtag('event', 'subscription_error', {
          event_category: 'newsletter'
        });
      }
    }
  }
  
  // Ejecutar cuando la página cargue
  document.addEventListener('DOMContentLoaded', processUrlParams);
</script> 