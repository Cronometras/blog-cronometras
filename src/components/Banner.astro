import { Image } from "astro:assets";

interface Props {
  title: string;
  content: string;
  image: string;
  button?: {
    label: string;
    link: string;
    enable: boolean;
  };
}

const { title, content, image, button } = Astro.props;

<section class="banner py-14 lg:py-20">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6 order-2 lg:order-1">
        <h1 class="mb-4 text-h1" set:html={title} />
        <p class="mb-8" set:html={content} />
        {
          button?.enable && (
            <a href={button.link} class="btn btn-primary">
              {button.label}
            </a>
          )
        }
      </div>
      <div class="lg:col-6 order-1 lg:order-2 mb-8 lg:mb-0">
        <img
          src={image}
          alt={title}
          class="mx-auto rounded-lg"
        />
      </div>
    </div>
  </div>
</section> 